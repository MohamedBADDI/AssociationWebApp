{% extends 'base.html.twig' %}

{% block body %}

    <div class=" container pad100">
        <div class="">
            <h1>Edit User</h1>
        </div>

        {{ form_start(edit_form) }}
        <div class="form-group">

            {{ form_label(edit_form.cin,'CIN') }}
            {{ form_errors(edit_form.cin) }}
            {{ form_widget(edit_form.cin, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="form-group">

            {{ form_label(edit_form.username,'Username') }}
            {{ form_errors(edit_form.username) }}
            {{ form_widget(edit_form.username, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="form-group">

            {{ form_label(edit_form.email,'Email') }}
            {{ form_errors(edit_form.email) }}
            {{ form_widget(edit_form.email, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="form-group">
            {{ form_label(edit_form.phone,'Phone') }}
            {{ form_errors(edit_form.phone) }}
            {{ form_widget(edit_form.phone, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="form-group">
            {{ form_label(edit_form.firstname,'First Name') }}
            {{ form_errors(edit_form.firstname) }}
            {{ form_widget(edit_form.firstname, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="form-group">
            {{ form_label(edit_form.lastname,'Last Name') }}
            {{ form_errors(edit_form.lastname) }}
            {{ form_widget(edit_form.lastname, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="form-group">
            {{ form_label(edit_form.birthdate,'Birthday') }}
            {{ form_errors(edit_form.birthdate) }}
            {{ form_widget(edit_form.birthdate, { 'attr': {'class': 'form-control input-inline date'} }) }}
        </div>

        <div class="form-group">
            {{ form_label(edit_form.photo,'picture') }}
            {{ form_errors(edit_form.photo) }}
            {{ form_widget(edit_form.photo, { 'attr': {'class': 'form-control-file'} }) }}
        </div>

        <div class="form-group">
            {{ form_label(edit_form.roles,'Roles') }}
            {{ form_errors(edit_form.roles) }}
            {{ form_widget(edit_form.roles, { 'attr': {'class': 'form-control'} }) }}
        </div>


        <div>
            <input type="submit" value="Edit" />
        </div>
        {{ form_end(edit_form) }}
        <ul>
            <li>
                <a href="{{ path('admin_user_index') }}">Back to the list</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>

    </div>






{% endblock %}
