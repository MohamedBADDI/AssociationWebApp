{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="title">
                <h1>User information</h1>
            </div>

            <div class="col-md-4">
                <div class="p_title">
                    <img src="{{ asset('photos/profiles/' ~ user.photo.path) }}" class="img-rounded" alt="Member" width="300" height="300"/>
                    <h2>{{ fname }}</h2>
                </div>
            </div>

            <div class="col-md-8">
                <table class="table_profile">
                    <tbody>
                    <tr>
                        <th>Cin</th>
                        <td>{{ user.cin }}</td>
                    </tr>
                    <tr>
                        <th>Username</th>
                        <td>{{ user.username }}</td>
                    </tr>
                    <tr>
                        <th>Firstname</th>
                        <td>{{ user.firstname }}</td>
                    </tr>
                    <tr>
                        <th>Lastname</th>
                        <td>{{ user.lastname }}</td>
                    </tr>
                    <tr>
                        <th>Birthdate</th>
                        <td>{% if user.birthdate %}{{ user.birthdate|date('d/m/Y') }}{% endif %}</td>
                    </tr>
                    <tr>
                        <th>Phone</th>
                        <td><a href="tel:{{ user.phone }}">{{ user.phone }}</a></td>
                    </tr>
                    <tr>
                        <th>Date inscription</th>
                        <td>{% if user.dateInscription %}{{ user.dateInscription|date('d/m/Y') }}{% endif %}</td>
                    </tr>

                    <tr>
                        <th>Roles</th>
                        <td>
                            <ul>
                                {% for role in user.roles %}
                                    <li>
                                        {{ role }}
                                    </li>
                                {% endfor %}
                            </ul>
                        </td>
                    </tr>

                    <tr>
                        <th>Groups</th>
                        <td>
                            <ul>
                                {% for group in user.groups %}
                                    <li>
                                        {{ group }}
                                    </li>
                                {% endfor %}
                            </ul>
                        </td>
                    </tr>

                    </tbody>
                </table>
            </div>

            <div class="col-md-12">
                <div class="row">
                    <div class="buttons_pad">
                        <div class="col-md-4"> <a class="btn_profile btn btn-primary" href="{{ path('admin_user_index') }}">Back to the list</a></div>
                        <div class="col-md-4"> <a class="btn_profile btn btn-success" href="{{ path('admin_user_edit', { 'id': user.id }) }}">Edit</a></div>
                        <div class="col-md-4">
                            {{ form_start(delete_form) }}
                            <input class="btn_profile btn btn-danger" type="submit" value="Delete">
                            {{ form_end(delete_form) }}
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>

{% endblock %}
